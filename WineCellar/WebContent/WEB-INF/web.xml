<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>WineCellar</display-name>

	<welcome-file-list>
		<welcome-file>pages/main.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>Jersey REST Service</servlet-name>
		<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>com.sun.jersey.config.property.packages</param-name>
			<param-value>lka.wine.rest</param-value>
		</init-param>
		<init-param>
			<param-name>com.sun.jersey.spi.container.ContainerRequestFilters</param-name>
			<param-value>lka.wine.filter.Filter</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>Jersey REST Service</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>mobilePage</servlet-name>
		<jsp-file>/pages/mobile.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>mobilePage</servlet-name>
		<url-pattern>/mobile</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>getImage</servlet-name>
		<servlet-class>lka.wine.servlets.ImageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>getImage</servlet-name>
		<url-pattern>/getImage</url-pattern>
	</servlet-mapping>

</web-app>